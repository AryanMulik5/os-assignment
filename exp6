read -p "Enter the number of columns: " n

# Printing the upper part of the pattern
for ((i=1; i<=n; i++))
do
    for ((j=1; j<=i; j++))
    do
        echo -n "*"
    done
    echo
done

# Printing the lower part of the pattern
for ((i=n-1; i>=1; i--))
do
    for ((j=1; j<=i; j++))
    do
        echo -n "*"
    done
    echo
done
